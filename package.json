{
  "name": "gatsby-skeleton",
  "private": true,
  "description": "Gatsby starter with SEO and all sort of linting",
  "version": "1.2.0",
  "license": "MIT",
  "author": {
    "name": "Matias Sallent",
    "url": "https://github.com/msallent"
  },
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint:js": "eslint --ignore-path .gitignore . --ext js --ext jsx",
    "lint:style": "stylelint 'src/**/*.{js,jsx}'",
    "lint:prettier": "prettier 'src/**/*.{json,md}' --list-different",
    "fix": "npm run fix:js && npm run fix:prettier",
    "fix:js": "eslint --ignore-path .gitignore . --ext js --ext jsx --fix",
    "fix:prettier": "prettier 'src/**/*.{json,md}' --write",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing \""
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.10.7",
    "gatsby": "^2.20.9",
    "gatsby-image": "^2.3.1",
    "gatsby-plugin-react-helmet-async": "^1.0.16",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.5.3",
    "gatsby-plugin-sitemap": "^2.3.1",
    "gatsby-plugin-styled-components": "^3.2.1",
    "gatsby-source-filesystem": "^2.2.2",
    "gatsby-transformer-sharp": "^2.4.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.4",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/msallent/gatsby-skeleton"
  },
  "bugs": {
    "url": "https://github.com/msallent/gatsby-skeleton/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git reset"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix --max-warnings=0",
      "stylelint",
      "git add"
    ],
    "src/**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
